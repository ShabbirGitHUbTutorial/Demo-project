<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <decisions>
        <name>SAP_Status_Value_check</name>
        <label>SAP Status Value check</label>
        <locationX>374</locationX>
        <locationY>276</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>CorrectSAPStatusFromLabel</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Label.SPEN_ConnSAPStatusValues</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <elementReference>$Record.SPEN_EntityStatus__c</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.SPEN_EntityStatus__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>CARE</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.SPEN_EntityStatus__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>CPRE</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>SAP_Status_Update</targetReference>
            </connector>
            <label>CorrectSAPStatusFromLabel</label>
        </rules>
    </decisions>
    <description>This Flow will be used to update the SAP status on Case whenever the new status comes in Status Alert</description>
    <environments>Default</environments>
    <interviewLabel>SAP Status Alert - After Create {!$Flow.CurrentDateTime}</interviewLabel>
    <label>SAP Status Alert - After Create</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>SAP_Status_Update</name>
        <label>SAP Status Update</label>
        <locationX>242</locationX>
        <locationY>384</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.SPEN_RelatedCase__r.Id</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>SPEN_SAPStatus__c</field>
            <value>
                <elementReference>$Record.SPEN_EntityStatus__c</elementReference>
            </value>
        </inputAssignments>
        <object>Case</object>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>SPEN_EntityStatus__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>SPEN_EntityOldStatus__c</field>
            <operator>NotEqualTo</operator>
            <value>
                <stringValue>JOBR</stringValue>
            </value>
        </filters>
        <object>SPEN_SAPStatusAlert__c</object>
        <recordTriggerType>Create</recordTriggerType>
        <scheduledPaths>
            <connector>
                <targetReference>SAP_Status_Value_check</targetReference>
            </connector>
            <pathType>AsyncAfterCommit</pathType>
        </scheduledPaths>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
