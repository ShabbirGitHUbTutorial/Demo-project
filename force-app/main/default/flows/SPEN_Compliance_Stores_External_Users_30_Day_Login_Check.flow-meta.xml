    <recordLookups>
        <description>Gets all users which are active, hold the contractor profile and haven&apos;t logged in within the last 30 days.</description>
        <name>Get_Active_Users</name>
        <label>Get Active Users</label>
        <locationX>380</locationX>
        <locationY>660</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Users_to_Deactivate</targetReference>
        </connector>
        <filterLogic>(1 AND 2) AND (3 OR (4 AND 5))</filterLogic>
        <filters>
            <field>ProfileId</field>
            <operator>In</operator>
            <value>
                <elementReference>contractorProfileIds</elementReference>
            </value>
        </filters>
        <filters>
            <field>IsActive</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>LastLoginDate</field>
            <operator>LessThan</operator>
            <value>
                <elementReference>LastLoginBoundaryDateTime</elementReference>
            </value>
        </filters>
        <filters>
            <field>LastLoginDate</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>CreatedDate</field>
            <operator>LessThan</operator>
            <value>
                <elementReference>CreatedDateBoundaryDate</elementReference>
            </value>
        </filters>
        <object>User</object>
        <outputReference>expiredUsers</outputReference>
        <queriedFields>Id</queriedFields>
    </recordLookups>
    <recordLookups>
        <name>Get_Profile_IDs</name>
        <label>Get Profile IDs</label>
        <locationX>380</locationX>
        <locationY>252</locationY>
        <assignNullValuesIfNoRecordsFound>false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Loop_Profile_IDs</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Name</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>SPEN Field Service Contractor</stringValue>
            </value>
        </filters>
        <object>Profile</object>
        <outputReference>profileIds</outputReference>
        <queriedFields>Id</queriedFields>
    </recordLookups>
