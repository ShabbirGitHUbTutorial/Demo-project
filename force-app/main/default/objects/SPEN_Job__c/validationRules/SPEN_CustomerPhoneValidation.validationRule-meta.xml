<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>SPEN_CustomerPhoneValidation</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(ISBLANK(SPEN_CustomerPhone__c)) &amp;&amp; NOT(REGEX( SPEN_CustomerPhone__c , &quot;[0-9]{10,12}&quot;))</errorConditionFormula>
    <errorDisplayField>SPEN_CustomerPhone__c</errorDisplayField>
    <errorMessage>Please enter valid phone number</errorMessage>
</ValidationRule>
