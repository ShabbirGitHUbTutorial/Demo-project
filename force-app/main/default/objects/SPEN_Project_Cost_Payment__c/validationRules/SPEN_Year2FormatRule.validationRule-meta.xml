<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>SPEN_Year2FormatRule</fullName>
    <active>true</active>
    <errorConditionFormula>(LEN( SPEN_Year2__c )&gt;=1 &amp;&amp; LEN(SPEN_Year2__c)&lt;4) || (NOT(REGEX(SPEN_Year2__c , &quot;[0-9]*&quot;)))</errorConditionFormula>
    <errorDisplayField>SPEN_Year2__c</errorDisplayField>
    <errorMessage>Please fill Year 2 in YYYY format</errorMessage>
</ValidationRule>
