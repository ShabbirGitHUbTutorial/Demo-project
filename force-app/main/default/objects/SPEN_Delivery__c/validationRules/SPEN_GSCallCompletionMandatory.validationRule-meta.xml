<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>SPEN_GSCallCompletionMandatory</fullName>
    <active>true</active>
    <description>CRMD-1342</description>
    <errorConditionFormula>AND( ISPICKVAL(SPEN_GSCallStatus__c , &apos;Successful&apos;),
 ISBLANK(SPEN_GSCallCompletionDate__c ) 
 )</errorConditionFormula>
    <errorDisplayField>SPEN_GSCallCompletionDate__c</errorDisplayField>
    <errorMessage>Please fill the GS Call Completion date if GS status is Successful</errorMessage>
</ValidationRule>
